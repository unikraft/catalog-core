#!/bin/sh

if test ! -f "workdir/build/wamr_xen-x86_64"; then
    echo "No kernel file workdir/build/wamr_xen-x86_64." 1>&2
    echo "Did you run ./scripts/build/xen.x86_64 ?" 1>&2
    exit 1
fi


# Pack filesystem as an initial ramdisk CPIO file.
rm -f rootfs.cpio
../repos/unikraft/support/scripts/mkcpio rootfs.cpio ./rootfs/

sudo xl create -c scripts/run/xen.x86_64.cfg
